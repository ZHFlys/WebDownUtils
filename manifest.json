{
  "manifest_version": 3,
  "name": "Web批量下载助手",
  "version": "1.0.0",
  "description": "智能批量下载工具，支持整页、区域选择和特定平台优化下载",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "contextMenus",
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Web批量下载助手",
    "default_icon": {
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png",
      "256": "assets/icons/icon256.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/strategies/platform-strategies.js", "src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "icons": {
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*", "assets/styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 