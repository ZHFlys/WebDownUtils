{
  "name": "webdownutils",
  "version": "1.0.0",
  "description": "WebDownUtils - 智能批量下载助手，支持页面扫描+网络监听双重获取，四级过滤系统，实时预览面板，多种下载模式，专属平台优化",
  "author": "WebDownUtils Team",
  "license": "Apache-2.0",
  "keywords": [
    "chrome-extension",
    "download",
    "batch-download",
    "web-scraping",
    "xiaohongshu",
    "network-monitoring",
    "file-filter",
    "preview-panel",
    "zip-download",
    "manifest-v3",
    "intelligent-download",
    "media-downloader"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ZHFlys/WebDownUtils"
  },
  "homepage": "https://github.com/ZHFlys/WebDownUtils#readme",
  "bugs": {
    "url": "https://github.com/ZHFlys/WebDownUtils/issues"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "lint": "eslint src/",
    "package": "node scripts/package.js",
    "test": "echo \"No tests specified\" && exit 0",
    "icons": "python scripts/generate-icons.py"
  },
  "devDependencies": {
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "chrome": ">=88.0.0"
  },
  "manifest": {
    "version": 3,
    "permissions": [
      "activeTab",
      "storage", 
      "downloads",
      "scripting",
      "contextMenus",
      "webRequest"
    ]
  },
  "features": {
    "dual_acquisition": "页面扫描 + 网络监听双重获取技术",
    "four_level_filter": "来源、类型、大小、格式四级智能过滤",
    "real_time_preview": "实时预览面板，支持图片网格和列表布局",
    "seven_download_modes": "智能下载、ZIP打包、脚本生成等7种下载方式",
    "format_conversion": "图片格式转换功能，支持JPG/PNG/WebP互转",
    "platform_optimization": "小红书等平台专属优化",
    "network_monitoring": "实时网络监听，3秒自动刷新",
    "intelligent_deduplication": "智能去重算法，避免重复下载",
    "responsive_ui": "响应式界面，支持拖拽和折叠"
  },
  "browser_support": {
    "chrome": ">=88",
    "edge": ">=88", 
    "brave": ">=1.20",
    "opera": ">=74"
  }
} 